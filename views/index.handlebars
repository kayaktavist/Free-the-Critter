<h1 id="title">Critters!</h1>

<div id="notcrit">
  <h2>Critters that are NOT free!</h2>

  <ul>
    {{#each critters}}
    {{#unless free}}
    {{> critters/critter-block fr=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div id="freecrit">
  <h2>Critters that are free!</h2>

  <ul>
    {{#each critters}}
    {{#if free}}
    {{> critters/critter-block fr=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>

<div id="add">
  <h2>Add a Critter</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Critter Type:</label>
      <input type="text" id="ca" name="type">
    </div>

    <div class="form-group">
      <label for="free">Free?</label><br>
      <input type="radio" name="free" value="0" checked> Banished!<br>
      <input type="radio" name="free" value="1"> Free!
    </div>

    <button type="submit">Add Critter</button>
  </form>
</div>